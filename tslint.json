{
    "defaultSeverity": "warning",
    "extends": [
        "tslint:latest",
        "tslint-react",
        "tslint-eslint-rules",
        "tslint-consistent-codestyle",
        "tslint-sonarts"
    ],
    "rulesDirectory": ["node_modules/rxjs-tslint"],
    "linterOptions": {
        "exclude": ["build/**", "target/**", "node_modules/**", "**.js"]
    },
    "rules": {
        "deprecation": true,
        "early-exit": true,
        "jsdoc-format": [true, "check-multiline-start"],
        "jsx-no-multiline-js": false,
        "linebreak-style": [true, "LF"],
        "max-line-length": false,
        "member-ordering": [true, { "order": ["static-field", "instance-field", "static-method", "instance-method"] }],
        "no-console": false,
        "no-collapsible-if": true,
        "no-duplicate-imports": true,
        "no-inferrable-types": false,
        "no-implicit-dependencies": [true, "dev"],
        "no-multi-spaces": true,
        "no-submodule-imports": [true, "rxjs"],
        "no-redundant-jsdoc": true,
        "no-return-undefined": true,
        "no-use-before-declare": true,
        "no-unnecessary-else": true,
        "object-literal-sort-keys": false,
        "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
        "quotemark": [true, "single", "jsx-double", "avoid-escape"],
        "rxjs-collapse-imports": true,
        "rxjs-pipeable-operators-only": true,
        "rxjs-no-static-observable-methods": true,
        "rxjs-proper-imports": true,
        "ter-max-len": [true, { "code": 120, "comments": 240, "ignoreUrls": true }],
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"]
    }
}
